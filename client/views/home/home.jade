template(name="contact")
    #contact.page
        h2.text-right {{_ "contact"}}
        .contact-details.col-sm-5.col-md-5.text-right
            p
                |Bob Aerts <br>
                |{{_ "expert_architecte"}}
            p
                | Giulia Doretti <br>
                | {{_ "ingenieur_architecte"}}
            p
                | Eleonora Maggiore <br>
                | {{_ "architecte"}}
            p
                | {{_ "rue_monastere"}}, 12 <br>
                | 1000 {{_ "bruxelles"}} - {{_ "belgique"}}
        .col-sm-7.col-md-7
            if emailSent
                p {{_ "email_envoye"}}
                p {{_ "nous_vous_recontacterons"}}
            else
                form.form-style.clearfix#newRequest
                    .form-group
                        input(type="text" class="text-field form-control required" placeholder="{{_ 'full_name'}}" name="name")
                    .form-group
                        input(type="Email" class="text-field form-control required" placeholder="email" name="email")
                    .form-group
                        input(type="tel" class="text-field form-control required" placeholder="{{_ 'tel'}}" name="tel")
                    .form-group
                        textarea(type="text" class="form-control required" placeholder="{{_ 'message'}}..." name="message")
                    .form-group
                        button(type="submit" class="btn btn-sm btn-outline-inverse") {{_ "submit"}}
